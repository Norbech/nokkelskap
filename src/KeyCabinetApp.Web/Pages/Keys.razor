@page "/keys"
@using KeyCabinetApp.Application.Services
@using KeyCabinetApp.Core.Entities
@using KeyCabinetApp.Web.Services
@inject AuthenticationService AuthService
@inject KeyControlService KeyControlService
@inject SessionStateService SessionState
@inject NavigationManager Navigation
@inject HardwareAgentManager HardwareAgentManager
@inject KeyImageService KeyImages
@implements IDisposable

<PageTitle>N칮kkelskap - Velg n칮kkel</PageTitle>

@if (SessionState.CurrentUser == null)
{
    <div class="loading">Laster...</div>
}
else
{
    <div class="key-selection-container">
        <!-- Header -->
        <div class="header">
            <div class="user-info">
                <svg class="user-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                </svg>
                <span class="user-name">@SessionState.CurrentUser.Name</span>
            </div>
            <div style="display: flex; gap: 12px; align-items: center;">
                <div class="hardware-status @(HardwareAgentManager.IsAgentConnected ? "connected" : "disconnected")">
                    <span class="status-dot"></span>
                    <span>Panel @(HardwareAgentManager.IsAgentConnected ? "tilkoblet" : "frakoblet")</span>
                </div>
                @if (SessionState.CurrentUser.IsAdmin)
                {
                    <button class="btn-admin" @onclick="GoToAdmin">丘뙖잺 Admin</button>
                }
                <button class="btn-logout" @onclick="Logout">LOGG UT</button>
            </div>
        </div>

        <!-- Status message -->
        <div class="status-card">
            <p class="@(IsError ? "error" : "")">@StatusMessage</p>
        </div>

        <!-- Keys grid -->
        <div class="keys-grid">
            @foreach (var key in AvailableKeys)
            {
                var imageUrl = KeyImages.GetImageUrl(key.Id);
                var isOnCooldown = IsKeyOnCooldown(key);
                var cooldownRemaining = GetCooldownRemaining(key);
                var isDoorOpen = DoorIsOpen.ContainsKey(key.Id) && DoorIsOpen[key.Id];
                
                <div class="key-card @(isOnCooldown ? "cooldown" : "")" @onclick="() => OpenKey(key)">
                    <!-- Door status indicator -->
                    @if (HardwareAgentManager.IsAgentConnected)
                    {
                        <div class="door-status-indicator @(isDoorOpen ? "open" : "closed")" title="@(isDoorOpen ? "D칮r 친pen" : "D칮r lukket")">
                            @if (isDoorOpen)
                            {
                                <span>游댑</span>
                            }
                            else
                            {
                                <span>游</span>
                            }
                        </div>
                    }
                    
                    <!-- Cooldown overlay -->
                    @if (isOnCooldown)
                    {
                        <div class="cooldown-overlay">
                            <div class="cooldown-text">Vent @cooldownRemaining sek</div>
                        </div>
                    }
                    
                    <div class="key-icon-section">
                        @if (!string.IsNullOrWhiteSpace(imageUrl))
                        {
                            <img class="key-card-image" src="@imageUrl" alt="Bilde for @key.Name" />
                        }
                        else
                        {
                            <svg class="key-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12.65 10C11.83 7.67 9.61 6 7 6c-3.31 0-6 2.69-6 6s2.69 6 6 6c2.61 0 4.83-1.67 5.65-4H17v4h4v-4h2v-4H12.65zM7 14c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2z"/>
                            </svg>
                        }
                        <span class="slot-id">Slot @key.SlotId</span>
                    </div>
                    <div class="key-info">
                        <span class="key-name">@key.Name</span>
                        <span class="key-description">@key.Description</span>
                    </div>
                </div>
            }
        </div>

        @if (AvailableKeys.Count == 0)
        {
            <div class="no-keys">
                <p>Du har ikke tilgang til noen n칮kler.</p>
            </div>
        }
    </div>
}

@code {
    private List<Key> AvailableKeys { get; set; } = new();
    private string StatusMessage { get; set; } = "Velg n칮kkel 친 친pne";
    private bool IsError { get; set; }
    private bool _hasInitialized;
    
    // Door status tracking
    private Dictionary<int, string> DoorStatuses { get; set; } = new();
    private Dictionary<int, bool> DoorIsOpen { get; set; } = new();
    private System.Threading.Timer? _statusRefreshTimer;
    
    // Cooldown tracking
    private Dictionary<int, DateTime> LastOpenTime { get; set; } = new();
    private const int CooldownSeconds = 5; // 5 seconds cooldown

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_hasInitialized)
        {
            await SessionState.InitializeAsync();
            _hasInitialized = true;

            if (SessionState.CurrentUser == null)
            {
                Navigation.NavigateTo("/login");
                return;
            }

            await LoadUserKeys();
            
            // Start periodic status refresh
            _statusRefreshTimer = new System.Threading.Timer(async _ => 
            {
                await RefreshDoorStatuses();
            }, null, TimeSpan.FromSeconds(2), TimeSpan.FromSeconds(5));
            
            StateHasChanged();
        }
    }

    private async Task LoadUserKeys()
    {
        if (SessionState.CurrentUser == null) return;

        // Debug logging
        Console.WriteLine($"Current User: {SessionState.CurrentUser.Name}");
        Console.WriteLine($"IsAdmin: {SessionState.CurrentUser.IsAdmin}");

        var keys = await KeyControlService.GetUserKeysAsync(SessionState.CurrentUser.Id);
        AvailableKeys = keys.OrderBy(k => k.Name).ToList();
    }

    private async Task RefreshDoorStatuses()
    {
        if (!HardwareAgentManager.IsAgentConnected) return;

        foreach (var key in AvailableKeys)
        {
            try
            {
                var status = await KeyControlService.GetSlotStatusAsync(key.SlotId);
                if (status != null)
                {
                    DoorStatuses[key.Id] = status;
                    // Simple heuristic: if status contains certain byte patterns, door is open
                    // This depends on your hardware protocol
                    DoorIsOpen[key.Id] = IsStatusOpen(status);
                }
            }
            catch
            {
                // Ignore errors during status refresh
            }
        }
        
        await InvokeAsync(StateHasChanged);
    }

    private bool IsStatusOpen(string status)
    {
        // This is a simple example - adjust based on your actual hardware response
        // You may need to check specific bytes in the response
        // For now, we'll assume the door is closed by default
        return status.Contains("01") || status.Contains("FF");
    }

    private bool IsKeyOnCooldown(Key key)
    {
        if (!LastOpenTime.ContainsKey(key.Id)) return false;
        
        var timeSinceLastOpen = DateTime.Now - LastOpenTime[key.Id];
        return timeSinceLastOpen.TotalSeconds < CooldownSeconds;
    }

    private int GetCooldownRemaining(Key key)
    {
        if (!LastOpenTime.ContainsKey(key.Id)) return 0;
        
        var timeSinceLastOpen = DateTime.Now - LastOpenTime[key.Id];
        var remaining = CooldownSeconds - (int)timeSinceLastOpen.TotalSeconds;
        return Math.Max(0, remaining);
    }

    private async Task OpenKey(Key key)
    {
        if (SessionState.CurrentUser == null) return;
        
        // Check cooldown
        if (IsKeyOnCooldown(key))
        {
            var remaining = GetCooldownRemaining(key);
            StatusMessage = $"Vent {remaining} sekunder f칮r du kan 친pne {key.Name} igjen";
            IsError = true;
            StateHasChanged();
            return;
        }

        StatusMessage = $"칀pner {key.Name}...";
        IsError = false;
        StateHasChanged();

        var authMethod = SessionState.CurrentUser.RfidTag != null ? "RFID" : "PASSWORD";
        var (success, message) = await KeyControlService.OpenKeyAsync(
            key.Id,
            SessionState.CurrentUser.Id,
            authMethod);

        StatusMessage = message;
        IsError = !success;
        
        if (success)
        {
            LastOpenTime[key.Id] = DateTime.Now;
            
            // Immediately refresh status for this door
            await Task.Delay(500);
            await RefreshDoorStatuses();
        }
        
        StateHasChanged();

        if (success)
        {
            await Task.Delay(2000);
            StatusMessage = "Velg n칮kkel 친 친pne";
            IsError = false;
            StateHasChanged();
        }
    }

    private void GoToAdmin()
    {
        Navigation.NavigateTo("/admin");
    }

    private void Logout()
    {
        AuthService.Logout();
        _ = SessionState.ClearAsync();
        Navigation.NavigateTo("/login");
    }

    public void Dispose()
    {
        _statusRefreshTimer?.Dispose();
    }
}
