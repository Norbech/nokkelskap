<Window x:Class="KeyCabinetApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:KeyCabinetApp.UI.Views"
        xmlns:vm="clr-namespace:KeyCabinetApp.UI.ViewModels"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="NÃ¸kkelskap Kontrollsystem" Height="800" Width="1280"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:KeySelectionViewModel}">
            <views:KeySelectionView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AdminViewModel}">
            <views:AdminView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LogViewerViewModel}">
            <views:LogViewerView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Border Grid.Row="0" Background="#2196F3" Padding="16">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" 
                          Text="NÃ˜KKELSKAP KONTROLLSYSTEM"
                          FontSize="24"
                          FontWeight="SemiBold"
                          Foreground="White"
                          VerticalAlignment="Center"/>
                
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ“‹ Logg"
                            Command="{Binding ShowLogViewerCommand}"
                            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="8,0" Padding="12,6"
                            Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="1"/>
                    
                    <Button Content="âš™ï¸ Admin"
                            Command="{Binding ShowAdminCommand}"
                            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="8,0" Padding="12,6"
                            Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="1"/>
                </StackPanel>
                
                <TextBlock DockPanel.Dock="Right"
                          Text="{Binding Source={x:Static System:DateTime.Now}, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"
                          VerticalAlignment="Center"
                          Foreground="White"
                          FontSize="14"
                          HorizontalAlignment="Right"
                          Margin="16,0"/>
            </DockPanel>
        </Border>

        <!-- Content area -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" Margin="10" />
    </Grid>
</Window>
